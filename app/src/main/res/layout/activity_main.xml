<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="org.redplatoon.headlinr.app.MainActivity">
    <TextView
        android:id="@+id/app_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:textSize="35sp"
        android:textColor="@color/text"
        android:text="@string/app_name"/>
    <TextView
        android:id="@+id/head_line"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:ellipsize="end"
        android:maxLines="3"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center_horizontal"
        android:padding="3dp"
        android:textSize="18sp"
        android:visibility="gone"
        android:background="@drawable/headline"
        android:textColor="@color/text"
        android:text="Title Placeholder"/>
    <TextView
        android:id="@+id/summary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:padding="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="14sp"
        android:ellipsize="end"
        android:maxLines="8"
        android:visibility="gone"
        android:background="@drawable/summary"
        android:textColor="@color/text"
        android:text="Title Placeholder"/>
    <TextView
        android:id="@+id/metadata"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:textSize="12sp"
        android:maxLines="2"
        android:visibility="gone"
        android:background="@drawable/metadata"
        android:textColor="@color/text"
        android:text="Metadata Placholder"/>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginRight="6dp"
        android:indeterminate="true"
        android:visibility="gone" />
    <TextView
        android:id="@+id/button"
        android:text="@string/headline_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:padding="15dp"
        android:textSize="30sp"
        android:background="@drawable/button"
        android:textColor="@color/text"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adUnitId="ca-app-pub-4547237027989566/2292472935"
        ads:adSize="BANNER"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/feedzilla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Powered by Feedzilla"
        android:textSize="6sp"
        android:layout_margin="1dp"
        android:textColor="@color/text"/>
</LinearLayout>
